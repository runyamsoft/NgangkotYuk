<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <LinearLayout
            android:id="@+id/toptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Anda Naik Agkot "/>
            <TextView
                android:id="@+id/txtangkot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffaa00"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Ekajaya"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/toptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Tujuan "/>
            <TextView
                android:id="@+id/txttujuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffaa00"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Mirota-vokasi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:gravity="right">
            <TextView
                android:id="@+id/txtharga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00c695"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rp. 3000;"/>
            <TextView
                android:id="@+id/txttgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30/03/2016"
                android:textColor="@color/common_plus_signin_btn_text_dark_disabled"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>